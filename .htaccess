# Set index.html as the default page (overrides hosting defaults)
DirectoryIndex index.html

# Enable URL rewriting
RewriteEngine On

# Force HTTPS (recommended for WebXR)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Don't rewrite backend API or static upload requests (handled by backend server)
RewriteCond %{REQUEST_URI} !^/api/
RewriteCond %{REQUEST_URI} !^/uploads/
RewriteCond %{REQUEST_URI} !^/defaults/

# If the request is for an existing file or directory, serve it directly
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Otherwise, serve index.html (SPA fallback)
RewriteRule ^ index.html [L]

# Proper MIME types for Vite build assets
<IfModule mod_mime.c>
  AddType application/javascript .js .mjs
  AddType text/css .css
  AddType application/json .json
  AddType model/gltf+json .gltf
  AddType model/gltf-binary .glb
  AddType image/svg+xml .svg
  AddType image/png .png
  AddType image/webp .webp
  AddType font/woff2 .woff2
  AddType font/woff .woff
</IfModule>

# Enable GZIP compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/css application/javascript application/json image/svg+xml
</IfModule>

# Cache static assets (Vite hashed filenames are cache-safe)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/svg+xml "access plus 1 month"
  ExpiresByType model/gltf+json "access plus 1 month"
  ExpiresByType model/gltf-binary "access plus 1 month"
</IfModule>
